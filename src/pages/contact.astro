---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import FormHero from '../components/blocks/hero/ContactHero.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'
import ContactCards from '../components/blocks/contact/ContactCards.astro'
import SocialProof from '../components/blocks/socialproof/Basic.astro'

// Content
// - SEO
const SEO = {
	title: 'Rferz | Hubungi kami',
	description:
		'Punya pertanyaan atau membutuhkan bantuan? Hubungi Rferz hari ini untuk dukungan, pertanyaan, atau umpan balik. Tim kami ada di sini untuk membantu Anda memanfaatkan pengalaman Rferz Anda sebaik-baiknya.'
}
// - Page Header
const header = {
	title: 'Dapatkan jawaban untuk Anda <strong>Rferz</strong> Pertanyaan.',
	text: "Apakah Anda memiliki pertanyaan, membutuhkan dukungan, atau hanya ingin membagikan umpan balik Anda, kami semua telinga. Jangkau kami dan kami akan menghubungi Anda sesegera mungkin."
}
---

<Layout title={SEO.title} description={SEO.description}>
	<FormHero
		title={header.title}
		text={header.text}
		id="contact"
		classes="bg-neutral-50 dark:bg-neutral-950/80"
	/>
	<ContactCards classes="dark:bg-neutral-950/80" />
	<SocialProof classes="dark:bg-neutral-950/80" />
	<CTA />
</Layout>
